/* pages/components/mask/mask.wxss */
.mask{
  width: 100%;
  height: 100%;
}
.mask-bg{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
  overflow: hidden;
}
.mask-box{
  position: fixed;
  width: 600rpx;
  height: 400rpx;
  background: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.mask-title{
  font-size: 56rpx;
  line-height: 3em;
}
.mask-content{
  color: #666;
  line-height: 2em;
}
.mask-control{
  display: flex;
  color: #21897d;
}
.mask-confirm,.mask-cancel{
  flex: 1;
  text-align: center;
  line-height: 3em;
}