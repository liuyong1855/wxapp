.top{
  background: url(http://wap.7lk.com/assets/wap/img/new-index_01.jpg) no-repeat top center;
  width: 100%;
  height: 460rpx;
  text-align: center;
}
#loge{
  width: 284rpx;
  height: 100rpx;
  padding: 40rpx 0;
}
.ipt-so{
  background-color: #fff;
  height: 80rpx;
  margin: 0 20rpx; 
  border-radius: 6rpx;
  padding-left: 60rpx; 
  text-align: left;
  position: relative;
}
.pla-so{
    font-size: 30rpx;  
    color: #222;
}
.ipt-so icon{
  position: absolute;
  left: 10rpx;
  top: 20rpx;
}
.nav{
  display: flex;
  padding-top: 40rpx; 
}
.nav-view{
  flex: 1;
}
.nav-img{
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
}
.nav-text{
  display: block;
  font-size: 32rpx;
  color: #fff;
  text-shadow: 2rpx 2rpx 8rpx #333;
  align-items: flex-start;
}
.bar{
  background-color: #ccc;
  height: 82rpx;
  line-height: 82rpx;
  padding-right: 20rpx;
}
.bar-left, .bar-rig{
  color: #2394da;
  font-size: 32rpx;
}
.bar-left{
  padding-left: 60rpx;
  background: url('http://wap.7lk.com/assets/wap/img/new-index_08.png') no-repeat 20rpx center;
  background-size: 34rpx 34rpx; 
}
.bar-rig{
  padding-left: 60rpx;
  background: url('http://wap.7lk.com/assets/wap/img/new-index_08.png') no-repeat 20rpx center;
  background-size: 34rpx 34rpx;
  float: right;
}
.barT{
  height: 74rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 0 10rpx;
  line-height: 74rpx;
  position: relative;
}
.barTleft{
  float: left;
}

.barTrig::after, .barTrig::before{
  content: "";
  width: 30rpx;
  height: 5px;
  background: #c9c9c9;
  display: block;
  position: absolute;
  right: 20rpx;
}
.barTrig::after{
      transform: rotate(-45deg);
      top: 30rpx;
}
.barTrig::before{
    transform: rotate(45deg);
    top: 15rpx;
}
.swi{
   min-height:  454rpx;
}
.ban{
   padding: 3%; 
   display: block;
}
.ban1,.ban2{
  display: flex;
}
.ban1 navigator,.ban2 navigator{
  flex: 1;
  margin-right: 2%;
  margin-bottom: 2%; 
}
.ban1 navigator image,.ban2 navigator image{
   width: 100%; 
   max-height: 182rpx;  
}
.timer{
  border-top: 20rpx solid #ccc;  
}